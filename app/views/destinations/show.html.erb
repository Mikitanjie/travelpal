<div class="container">

  <h1>Destination/show</h1>

  <p><%= "Name: #{@destination.name}" %></p>
  <p><%= "Address: #{@destination.address}" %></p>
  <p><%= "Description: #{@destination.description}" %></p>

  <div>
    <%= link_to toggle_favorite_destination_path(@destination), remote: true, data: {turbo_method: :post} do %>
      <%= render "destinations/like_button", destination: @destination %>
    <% end %>
  </div>

  <%= link_to "Back to Destinations", destinations_path %>

</div>
