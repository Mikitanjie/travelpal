var destinationId = '<%= @destination.id %>'

function toggleLikeButton(destinationId, favoritedDestination) {
  let likeButton = document.querySelector(`.like-icon[data-id='${destinationId}']`)
  likeButton.classList.toggle('red');
  if (likeButton.classList.contains('red')) {
    const favoriteList = document.querySelector('.favorites');
    favoriteList.insertAdjacentHTML('beforeend', favoritedDestination)
  }
  else {
    document.querySelector(`.favorite[data-id='${destinationId}']`).remove()
  }
}

toggleLikeButton(destinationId, '<%= j render "destinations/destination", destination: @destination %>');
