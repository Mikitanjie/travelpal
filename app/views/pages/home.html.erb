<head>
<link href="https://api.mapbox.com/mapbox-gl-js/v2.11.0/mapbox-gl.css" rel="stylesheet">
<script src="https://api.mapbox.com/mapbox-gl-js/v2.11.0/mapbox-gl.js"></script>
</head>

<div class="banner">
  <h1 style="margin-top: 200px;">Welcome to TravelPal</h1>
  <div class="row justify-content-center" style="width: 1000px; margin-top: 150px;">
    <div class="col-sm-8">
      <%= form_with url: destinations_path, method: :get, class: "search-form" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a destination",
          input_html: {data: {address_autocomplete_target: "address"}},
          wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}%>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<div class="container" style="padding: 50px">
  <h2 class="row justify-content-center">Our top picks</h2>
</div>

<div class="container" style="padding: 0 100px 100px">
  <div class="row">
    <div class="home-card col-sm-6">

      <div id="cardCarousel" class="carousel slide">
        <div class="carousel-inner">
          <% @destinations.each_with_index do |destination, index| %>
            <div class="carousel-item <%= index == 0 ? "active" : "" %>">
              <%= link_to destination_path(destination), class: "text-dark text-decoration-none" do %>
                <div class="row card-container">
                  <div class="col-md-12">
                    <div class="card card-sm mb-3">
                      <img class="card-img-top" src="<%= asset_path(destination.image_path) %>" alt="Card image cap">
                      <div class="card-body">
                        <h5 class="card-title"><%= destination.name %></h5>
                        <p class="card-text"><%= destination.description %></p>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#cardCarousel" role="button" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#cardCarousel" role="button" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

    </div>

    <div class="home-card col-sm-6">
      <div class="col-md-12">


        <div class="map-container"
          <div style="width: 100%; height: 337px; border-radius: 10px;"
            data-controller="map"
            data-map-markers-value="<%= @markers.to_json %>"
            data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
        </div>


      </div>
    </div>
  </div>
</div>
