<div class="container" style="margin-top: 5px; margin-bottom: 20px;">

  <h1 style="margin-bottom: 50px; text-align: center;">Your trip to <%= @trip.destination.name %></h1>
  <%= link_to "Check My Dashboard", dashboard_path, style: "background-color: #2156af; border: none; color: #FFFFFF; font-size: 20px; font-weight: bold; padding: 10px 20px; text-decoration: none; transition: all 0.3s ease-in-out;" %>


  <div class="row" style="margin-top: 50px;">
    <div class="col-md-4">
      <div class="card" style="width: 18rem; height: 460px !important;">
        <img src="<%= asset_path(@trip.destination.image_path) %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><p><strong><%= @trip.destination.name %></strong></p></h5>
          <p><em><%= @trip.destination.description %></em></p>
          <p class="card-text">Start Date: <%= @trip.start_date %></p>
          <p class="card-text">End Date: <%= @trip.end_date %></p>
          <div class="d-flex justify-content-between">
            <%= link_to "Edit", edit_trip_path(@trip), style: "background-color: #2156af; border-radius: 20px; border: none; color: #FFFFFF; font-size: 20px; font-weight: bold; padding: 10px 20px; text-decoration: none; transition: all 0.3s ease-in-out;" %>
            <%= link_to "Delete", trip_path(@trip), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, style: "background-color: #2156af; border-radius: 20px; border: none; color: #FFFFFF; font-size: 20px; font-weight: bold; padding: 10px 20px; text-decoration: none; transition: all 0.3s ease-in-out;" %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
