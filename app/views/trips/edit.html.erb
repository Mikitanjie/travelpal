<div class="container" style="">
  <div style="background-color: #FFFF; padding: 50px; border-radius: 10px; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); margin: 100px auto; max-width: 600px;">
    <%= form_with(model: @trip, local: true) do |form| %>
      <h2 style="font-size: 36px; font-weight: 700; text-align: center; margin-top: 0; margin-bottom: 30px; color: #4F4F4F;">Edit Trip Details</h2>
      <%= form.label :start_date, "Start date", style: "font-size: 18px; font-weight: 600; margin-bottom: 10px; color: #4F4F4F; display: block;" %>
      <%= form.date_field :start_date, data: { flatpickr_target: "startTime" }, style: "font-size: 18px; background-color: rgba(255, 255, 255, 0.8); border-radius: 10px; border: none; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); padding: 12px; margin-bottom: 20px; width: 100%; transition: box-shadow 0.3s ease;" %>
      <%= form.label :end_date, "End date", style: "font-size: 18px; font-weight: 600; margin-bottom: 10px; color: #4F4F4F; display: block;" %>
      <%= form.date_field :end_date, data: { flatpickr_target: "endTime" }, style: "font-size: 18px; background-color: rgba(255, 255, 255, 0.8); border-radius: 10px; border: none; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); padding: 12px; margin-bottom: 20px; width: 100%; transition: box-shadow 0.3s ease;" %>
      <%= form.submit "Submit", class: "btn btn-primary", style: "background-color: #3d5085; border: none; border-radius: 10px; color: #FFFFFF; font-size: 18px; font-weight: 600; padding: 12px; width: 100%; margin-top: 10px; transition: background-color 0.3s ease, box-shadow 0.3s ease;", data: { disable_with: "Please wait..." } %>
    <% end %>
  </div>
</div>

